page {
  height: 100%
}
.container {
  height: 100%;
  width: 100%;
  background-color: #DDDDDD;
}
.colorBase {
  background-color: #040e18;
}

.textColor {
  color: #fff;
}

.header {
  width: 100%;
  height: 30%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}

.content {
  width: 100%;
  height: 70%;
}

.figure {
  display: block;
  width: 300rpx;
  height: 300rpx;
  position: relative;
  left: -150rpx;
  top: 45rpx;
}

.phone {
  display: block;
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 300rpx;
  left: 430rpx;
}
.map {
  display: block;
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 300rpx;
  left: 580rpx
}

.contentHeader {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding-top: 20rpx;
  padding-left: 20rpx;
}

.contentHeaderImg {
  width: 70rpx;
  height: 70rpx;
}

.contentDes {
  margin-left: 20rpx;
  width: 77%;
  border-bottom: 1px dashed #fff;
}

.textSelection {
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
}

.textSelection > text, .textSelection > view {
  margin-top: 10rpx;
}

.sheet {
  height: 100%;
}

.git {
  width: 45rpx;
  height: 45rpx;
}

.flex {
  display: flex;
}

.classify {
  height: 100%;
}

.ladder-shaped {
  display: flex;
  flex-direction: row;
  justify-content: start;
  height: 200rpx;
  position: relative;
}

.ladder-shaped-left {
  width: 50%;
  height: 100%;
  background-image: url(https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1540632099264&di=cffdddd7564df081bedfb7511c7bf9a9&imgtype=0&src=http%3A%2F%2Fupload.ikanchai.com%2F2018%2F0711%2F1531299169568.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -webkit-clip-path: polygon(0 0, 80% 0%, 100% 100%, 0% 100%);
  clip-path: polygon(0 0, 80% 0%, 100% 100%, 0% 100%);
  position: absolute;
  right: 338rpx;
}

.ladder-shaped-right {
  width: 50%;
  height: 100%;
  background-image: url(https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1540632920692&di=6a0ee79dddef9078838b1a15cc9882a6&imgtype=0&src=http%3A%2F%2Fdocs.ebdoor.com%2FImage%2FCompany%2F383%2F3832639_intro1.jpg);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -webkit-clip-path: polygon(0 0, 100% 0, 100% 100%, 20% 100%);
  clip-path: polygon(0 0, 100% 0, 100% 100%, 20% 100%);
  position: absolute;
  left: 338rpx;
  border-right: 1px solid #040e18;
}
.work-experience-step {
  margin: 50rpx 0 0 250rpx;
}
.sheet .step-text-color {
  color: white;
}
.sheet .i-step-finish .i-step-ico {
  color: rgb(113, 84, 246);
  border: rgb(113, 84, 246) 1px solid
}
.sheet .i-step-finish .i-step-line {
  background: rgb(113, 84, 246);
}
.project-experience {
  width: 100%
}
.project-experience .i-cell {
  background: #040e18;
  padding: 0 40rpx;
  height: 110rpx;
}
.evaluate-container{

}
.rate{
  line-height: 0;
  margin: 20rpx 0;
}
.rate .desc {
  display: inline-block;
  width: 365rpx;
  height: 60rpx;
  text-align: right;
}
.text-area{
  margin: 0 auto;
  border: 1px solid rgba(258, 255, 245, .6);
  border-radius: 4px;
}
.rate-switch .i-switch-checked{
  background-color: rgb(113, 84, 246)!important; 
}
.rate-button{
  background-color: rgb(113, 84, 246)!important;
  margin: 50rpx!important;
}