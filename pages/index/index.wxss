/**index.wxss**/

.colorBase {
  background-color: #040e18;
}

.textColor {
  color: #fff;
}

.header {
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}

.content {
  width: 100%;
  height: 1700rpx;
}

.figure {
  display: block;
  width: 300rpx;
  height: 300rpx;
  position: relative;
  left: -150rpx;
  top: 45rpx;
}

.phone {
  display: block;
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 300rpx;
  left: 600rpx;
}

.contentHeader {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding-top: 20rpx;
  padding-left: 20rpx;
}

.contentHeaderImg {
  width: 70rpx;
  height: 70rpx;
}

.contentDes {
  margin-left: 20rpx;
  width: 75%;
  border-bottom: 1px dashed #fff;
}

.textSelection {
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
}

.textSelection > text, .textSelection > view {
  margin-top: 10rpx;
}

.sheet {
  height: 100%;
}

.git {
  width: 45rpx;
  height: 45rpx;
}

.flex {
  display: flex;
}

.classify {
  height: 100%;
}

